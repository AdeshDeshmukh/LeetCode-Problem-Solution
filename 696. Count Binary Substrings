// Contest LC
using ll   =  long long;
using vi  =  vector<int>;
using vll  =  vector<ll>;
#define pb push_back
#define sorta(v) sort((v).begin(), (v).end())
#define foo(i, a, b) for (int i = (a); i < (b); ++i )


class Solution {
public:
    int countBinarySubstrings(string s) {
        int re = 0, p = 0, c = 1;
        foo(i,1,s.size()){
            if (s[i] == s[i - 1]) c++;
            else {
                p = c;
                c = 1;
            }
            if (c <= p)re++;
        }return re;
    }
};
