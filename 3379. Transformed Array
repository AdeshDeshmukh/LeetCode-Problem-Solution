// Contest LC
using ll   =  long long;
using vi  =  vector<int>;
using vll  =  vector<ll>;
#define pb push_back
#define sorta(v) sort((v).begin(), (v).end())
#define foo(i, a, b) for (int i = (a); i < (b); ++i )


class Solution {
public:
    vector<int> constructTransformedArray(vi& n) {
        ll nn = n.size();
        vi re(nn);
        for(int i = 0; i < nn; i ++){
            re[i] = n[((i + n[i]) % nn + nn) % nn];
        }
        return re;
    }
};
