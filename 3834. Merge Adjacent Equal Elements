// Contest LC
using ll   =  long long;
using vi  =  vector<int>;
using vll  =  vector<ll>;
#define pb push_back
#define sorta(v) sort((v).begin(), (v).end())
#define foo(i, a, b) for (int i = (a); i < (b); ++i )


class Solution {
public:
    vector<long long> mergeAdjacent(vector<int>& n) {
        ll nn = n.size() ;
        vll st ;
        foo(i,0,nn){
            st.pb(n[i]) ;
            while(st.size() >= 2 && st[st.size()-1] == st[st.size()-2]){
                ll re = st.back() *2;
                st.pop_back() ; st.pop_back() ;
                st.pb(re) ;
            }

            
        }return st ;
        
    }
};
