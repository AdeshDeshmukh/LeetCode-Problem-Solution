class Solution {
public:
    int firstUniqChar(string s) {
        int freq[26] = {}, ind[26];
        int res = -1;

        for(int i=0; i<s.size(); i++){
            freq[s[i] - 'a']++;
            ind[s[i] - 'a'] = i;
        }
            
        for(int i=0; i<26; i++){
            if(freq[i] == 1)
                res = (res == -1)? ind[i]: min(res, ind[i]);
        }

        return res;
    }
};
