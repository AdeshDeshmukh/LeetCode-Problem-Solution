class Solution {
public:
    int countSubstrings(string s) {
        int ans = 0 , n = s.size();

        for (int i = 0; i < n; i++) {
            ans += ep(s, i, i);
            ans += ep(s, i, i + 1);
        }
        return ans;
    }

private:
    int ep(const string& s, int l, int r) {
        int c = 0;
        while (l>= 0 && r < s.size() && s[l] == s[r]) {
            c++;l--;r++;
        }
        return c;
    }
};
